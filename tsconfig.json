{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // "types": ["offscreencanvas"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": false, // TODO swap to true
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./types"
    ],
    "noErrorTruncation": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    // "next-env.d.ts",
    // "**/*.ts",
    // "**/*.tsx",
    // "**/*.cjs",
    "**/*.mjs",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
